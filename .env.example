# MoE Routing Environment Variables Example
# Copy to .env and modify as needed

# API Server Configuration
API_HOST=localhost
API_PORT=8000
LOG_LEVEL=info

# Controller Parameters (4.72x improvement validated)
IMPROVEMENT_TARGET=4.0
BETA_MIN=0.3
BETA_MAX=1.0
LAMBDA_MIN=0.85
LAMBDA_MAX=0.95

# Performance Thresholds
TARGET_GATING_SENSITIVITY=0.1
TARGET_WINNER_FLIP_RATE=0.05
MAX_PROCESSING_TIME_MS=50

# Monitoring Configuration
METRICS_ENABLED=true
DETAILED_LOGGING=true
EXPORT_INTERVAL_SECONDS=60
METRICS_HISTORY_LIMIT=10000

# Dashboard
DASHBOARD_PORT=8501
DASHBOARD_REFRESH_INTERVAL=5

# Security (set in production)
ALLOWED_HOSTS="*"
CORS_ALLOW_ORIGINS="*"
MAX_REQUEST_SIZE_MB=10
RATE_LIMIT_PER_MINUTE=1000

# Resource Limits
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=50
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# Optional: External Monitoring
# PROMETHEUS_URL=http://prometheus:9090
# GRAFANA_URL=http://grafana:3000
# GRAFANA_API_KEY=your_api_key_here