# Docker Environment Configuration
# MoE Routing Stability Controller

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
PYTHONPATH=/app

# Controller Settings
IMPROVEMENT_TARGET=4.0
VALIDATION_INTERVAL_HOURS=24
METRICS_HISTORY_LIMIT=10000

# Monitoring
METRICS_ENABLED=true
EXPORT_INTERVAL_SECONDS=60
DETAILED_LOGGING=true

# Resource Limits
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=50
REQUEST_TIMEOUT_SECONDS=30

# Dashboard Configuration
DASHBOARD_API_URL=http://moe-routing-api:8000
DASHBOARD_PORT=8501

# Optional: Prometheus/Grafana
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GF_SECURITY_ADMIN_PASSWORD=admin123